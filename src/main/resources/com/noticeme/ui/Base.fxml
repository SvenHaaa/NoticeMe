<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.noticeme.controller.MainController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Testdata">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onInsertTestData" text="insert" />
                  <MenuItem mnemonicParsing="false" onAction="#onDeleteTestdata" text="remove" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="more">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onRefresh" text="refresh" />
                  <MenuItem mnemonicParsing="false" onAction="#onAbout" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TableView fx:id="tvNotes">
            <columns>
                <TableColumn fx:id="tiTitle" prefWidth="75.0" text="Titel" />
                <TableColumn fx:id="tiNote" prefWidth="75.0" text="Bemerkung" />
                <TableColumn fx:id="tiDate" prefWidth="75.0" text="Datum" />
                <TableColumn fx:id="tiTime" prefWidth="75.0" text="Uhrzeit" />
                <TableColumn fx:id="tiWhere" prefWidth="75.0" text="Ort" />
                <TableColumn fx:id="tiNotify" prefWidth="75.0" text="benachrichtigen?" />
            </columns>
        </TableView>
        <FlowPane alignment="CENTER">
            <children>
                <Button fx:id="btnNeu" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onNew" text="neu">
                    <FlowPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onEdit" text="edit">
                    <FlowPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </FlowPane.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </FlowPane>
    </children>
</VBox>
